<h1>Question Creation Form</h1>

<form action="/admin/question" method="POST">
  <div class="form-group">
    <label for="level_id">Level</label>
    <select name="level_id" class="form-control" id="level_id">
      <% @levels.each do |level| %>
        <option value="<%= level.id %>"><%= level.number %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label for="text">Text</label>
    <input class="form-control" id="text" type="text" name="text">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
